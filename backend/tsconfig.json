{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./dist", // 컴파일된 파일 출력 디렉토리
    "rootDir": "./", // 소스 파일의 루트 디렉토리
    "baseUrl": "./", // 모듈 해석의 기본 경로
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
